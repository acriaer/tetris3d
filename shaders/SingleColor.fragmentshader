#version 330 core

in vec2 uv_out;
in vec3 diffuse_out;
out vec3 color;

uniform sampler2D sampler;

void main()
{
	float color_val = 1;

	if (bool(int(int(uv_out.x * 100) % 10 < 5) ^ int(int(uv_out.y * 100) % 10 < 5)))
		color_val = 0;

	color = vec3(color_val * diffuse_out.x, color_val * diffuse_out.y, color_val * diffuse_out.z);
}
